<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/docientos_treintacinco"
    android:layout_height="@dimen/docientos_cinuetacinco"
    android:id="@+id/card_cursov_tarjV"
    android:layout_marginTop="@dimen/fab_margin"
    android:layout_marginLeft="@dimen/fab_margin"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/img_imgC_tarjV"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/ciento_treinta"
            android:background="@color/colorNegro"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/fab_margin">


            <TextView
                android:id="@+id/tex_tituloC_tarjV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/titulo"
                android:textColor="@color/colorNegro"
                android:textSize="@dimen/texto_diesiceis"/>
            <RatingBar
                android:id="@+id/rating_estrella_tarjV"
                android:layout_width="match_parent"
                android:layout_height="@dimen/cincuenta"
                />
            <TextView
                android:id="@+id/tex_precio_tarjV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/precio"
                android:textColor="@color/colorNegro"/>


        </LinearLayout>


    </LinearLayout>
</android.support.v7.widget.CardView>